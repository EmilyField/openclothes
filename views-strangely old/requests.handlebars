<body style="background-image:url(http://bewellcounselingaz.com/wp-content/uploads/2013/01/grey-background-1.png); background-repeat:no-repeat; background-size:cover;">
    <div id="wrap" class="">
    <!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"> <span class="icon-bar"></span>
 <span class="icon-bar"></span>
 <span class="icon-bar"></span>

                </button> <a class="navbar-brand" href="#">open / clothes</a>
                               
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav target">
                    <li class="active"><a href="/closet" class="">Closet</a>

                    </li>
                    <li><a href="/feed" class="">Feed</a>

                    </li>
                    <li><a href="/requests" class="">Notifications</a>

                    </li>
                    <li><a href="/findfriend" class"">
                    Find a Friend</a>
                    </li>
