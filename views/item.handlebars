<body style="background-color:#333333">
    <div id="wrap" class="">
    <!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"> <span class="icon-bar"></span>
 <span class="icon-bar"></span>
 <span class="icon-bar"></span>

                </button> <a class="navbar-brand" style="color:#664544" href="#">open / clothes</a>
                                
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav target">
                    <li class="active"><a style="font-family:'Duru Sans', Verdana, sans-serif; color:#664544" href="/closet" class="">closet</a>

                    </li>
                    <li><a href="/feed" style="font-family:'Duru Sans', Verdana, sans-serif; color:#664544" class="">feed</a>

                    </li>
                    <li><a href="/requests" style="font-family:'Duru Sans', Verdana, sans-serif; color:#664544" class="">notifications</a>
                        <span class="pull-right" style="color:#ffffff; font-weight:bold">{{numNotifs}}</span></a>
                    </li>
                    <li><a href="/findfriend" style="font-family:'Duru Sans', Verdana, sans-serif; color:#664544" class"">
                    find a friend</a>
                    </li>
                    <li><a href="/logout" style="font-family:'Duru Sans', Verdana, sans-serif; color:#664544" class="">log out</a>

                    </li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
    <!-- Begin page content -->
    <div class="container" style="color:#ffffff; font-family:'Duru Sans', Verdana, sans-serif">
        <div id="item-heading" style="color:#ffffff; font-family:'Duru Sans', Verdana, sans-serif">
            <h1>{{name}}</h1>
        </div>
        <div id = "photo">
            <img src="{{imageURL}}" width="250px"/>
        </div>
        <div id = "info" style="color:#ffffff; font-family:'Duru Sans', Verdana, sans-serif">

            {{#unless mine}}<p>owned by <a href="/closet?user={{ownedby}}">{{ownedby}}</a></p>{{/unless}} <!-- if it isn't yours, links to user's closet -->
            <p>brand: 
            {{brand}}</p>
            <p>best for: 
                {{#each weather}}
                <img src="images/{{this}}.png" width="30px"/>
                {{/each}}
            </p>
            <p>size: {{size}}</p>
            {{#if borrowed}}<p>borrowed by {{borrowedby}} until {{borroweddate}}</p>{{/if}}
        </div>
        <div id = "social" style="color:#ffffff; font-family:'Duru Sans', Verdana, sans-serif">
            <!-- if it's yours -->
            {{#if mine}}<!--<a class="btn btn-default" href="/add?itemID={{itemID}}">Edit <span class="glyphicon glyphicon-edit"></span></a>-->{{/if}}
            {{#if mine}}<a class="btn btn-danger" href="/remove?itemID={{_id}}">remove from closet</a>{{/if}}
            <!-- if it isn't and it's borrowable -->
            {{#unless mine}}{{#if borrowable}}<a class="btn btn-success" href="/borrow?itemID={{_id}}">borrow</a>{{/if}}{{/unless}}
        </div>

    </div>
    <div class="row"></div>
</div>
<div class = "navbar navbar-default navbar-fixed-bottom">
               
                        <div class = "container">
                            <form id="like" action="/like" method="post">
                                <input name="itemID" value="{{_id}}" type="hidden">
                                <button class = "navbar-btn btn pull-left" type="submit"><span id="like_count" style="font-family:'Duru Sans', Verdana, sans-serif">{{likes}} </span><span id="heart" class="glyphicon glyphicon-heart"></span></button>
                            </form>
                                <a class = "navbar-btn btn pull-right link-btn" style="color:#664544" onClick="goBack()" ><span class="glyphicon glyphicon-arrow-left"></span></a> 
                        </div>
               
